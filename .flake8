[flake8]
max-line-length = 120
exclude = 
    .tox,
    .git,
    __pycache__,
    *.pyc,
    *.pyo,
    *.pyd,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info
ignore = 
    E501,  # line too long
    E402,  # module level import not at top of file
    E712,  # comparison to True/False
    F401,  # imported but unused
    W503,  # line break before binary operator
    W504   # line break after binary operator
